<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hostel XO - Rooms</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
        function showBookingForm(hostelId) {
            document.getElementById('bookingForm').classList.remove('hidden');
            document.getElementById('hostelIdInput').value = hostelId;
        }
    </script>
</head>
<body class="bg-gray-100">

    <nav class="bg-gray-800 w-full p-4 fixed top-0 z-50">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <div class="flex items-center">
                <a href="/"><h1 class="text-white text-2xl font-bold">Hostel XO</h1></a>
            </div>
            <div class="flex space-x-4">
                <a href="/about" class="text-gray-300 hover:text-white px-3 py-2">About</a>
                
                <% if (user) { %>
                  <a href="/profile" class="text-gray-300 hover:text-white px-3 py-2">Profile</a>
                  <a href="/rooms" class="text-gray-300 hover:text-white px-3 py-2">Rooms</a>
                  <a href="/logout" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-full shadow-md">Logout</a>
                <% } else { %>
                  <a href="/m-reg" class="text-gray-300 hover:text-white px-3 py-2">Register</a>
                  <a href="/m-log" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-full shadow-md">Login</a>
                <% } %>
            </div>
        </div>
      </nav>

    <!-- Header -->
    <header class="text-center my-8 pt-20">
        <h1 class="text-4xl font-bold">Our Rooms</h1>
        <p class="text-gray-700">Explore our comfortable and stylish rooms designed to make you feel at home.</p>
    </header>

    <!-- Rooms Section -->
    <section class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% hostels.forEach((hostel) => { %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <img src="<%= hostel.img %>" alt="Room Image" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h2 class="text-xl font-bold"><%= hostel.name %></h2>
                    <p class="text-gray-700 mt-2"><%= hostel.location %></p>
                    <div class="flex justify-between">
                        <p class="text-yellow-500 mt-4 font-bold">â‚¹<%= hostel.pricePerDay %> per day</p>
                        <button class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-full" onclick="showBookingForm('<%= hostel._id %>')">Book Now</button>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </section>

    <!-- Booking Form -->
    <div id="bookingForm" class="hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-sm w-full">
            <h2 class="text-xl font-bold mb-4">Book This Hostel</h2>
            <form action="/book-hostel" method="POST">
                <input type="hidden" name="hostelId" id="hostelIdInput">
                <div class="mb-4">
                    <label for="username" class="block text-gray-700">Username:</label>
                    <input type="text" id="username" name="username" class="mt-1 p-2 w-full border rounded" required>
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-gray-700">Password:</label>
                    <input type="password" id="password" name="password" class="mt-1 p-2 w-full border rounded" required>
                </div>
                <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-full">Submit</button>
                <button type="button" class="ml-2 bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-full" onclick="document.getElementById('bookingForm').classList.add('hidden')">Cancel</button>
            </form>
        </div>
    </div>

</body>
</html>
